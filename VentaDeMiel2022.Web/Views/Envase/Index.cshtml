@using System.Linq
@model List<VentaDeMiel2022.Web.Models.Envase.EnvaseListVm>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mt-4 mb-4 ">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Dashboard</a></li>
    <li class="breadcrumb-item active">Envases</li>
</ol>

<h4>Listado de Envases</h4>

<p>
    <a href="@Url.Action("Create", "Envase")" class="btn btn-primary"><i class="fas fa-plus"></i></a>
</p>

<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Imagen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().TipoEnvase)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Stock)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (!string.IsNullOrEmpty(item.Imagen))
                {
                    <img src="@Url.Content(item.Imagen)" alt="Image" style="width: 100px; height: 150px; max-width: 100%; height: auto;" />
                }
                else
                {
                    <img src="@Url.Content("~/Content/Imagenes/Envases/imagenNoDisponible.jpg")" alt="Imagen" style="width: 100px; height: 150px; max-width: 100%; height: auto;" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.TipoEnvase)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Envase", new { id = item.EnvaseId })" class="btn btn-warning"><i class="fas fa-pen"></i></a>
                <a href="@Url.Action("Delete", "Envase", new { id = item.EnvaseId })" class="btn btn-danger"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
    }
</table>
