@model List<VentaDeMiel2022.Entidades.Dtos.TipoEnvaseListDto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mt-4 mb-4">
</ol>
<h5 class="card-header bg-primary text-white">
    Listado de Tipos de Envase
</h5>

<div class="card-body">
    <a href="@Url.Action("Create","TiposEnvases")" class="btn btn-primary">Crear Nuevo</a>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="2">
                        No hay registros todavía
                    </td>
                </tr>
            }
            else
            {
                foreach (var tipoEnvase in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => tipoEnvase.Descripcion)</td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = tipoEnvase.TipoEnvaseId }, new { @class = "btn btn-warning" })
                            @Html.ActionLink("Borrar", "Delete", new { id = tipoEnvase.TipoEnvaseId }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
